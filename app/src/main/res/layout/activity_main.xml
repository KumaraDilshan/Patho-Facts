<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gerrie.myapplication_4.MainActivity"
    android:background="@drawable/images">


    <TextView
        android:text="Plant pathology and Microbiology Module "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/clear"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerHorizontal="true"
        tools:textSize="18sp"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Department of Agricultural Biology "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerHorizontal="true"
        tools:textSize="18sp"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Faculty of Agriculture  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView5"
        android:textColor="@android:color/holo_green_dark"
        tools:textSize="18sp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="University of Peradeniya "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/holo_green_dark"
        tools:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <Spinner
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Spinner"
        android:elevation="0dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_below="@+id/button15"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="55dp" />

    <Button
        android:text="Clear"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/Clear"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/Search"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/Search" />

    <Button
        android:text="Application Info"
        android:layout_height="40dp"
        android:id="@+id/button7"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp"
        android:background="@drawable/my_button_bg" />

    <Button
        android:text="Application Info"
        android:layout_height="40dp"
        android:id="@+id/Info"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp"
        android:background="@drawable/my_button_bg" />

    <Button
        android:text="Contact Developer"
        android:layout_height="40dp"
        android:id="@+id/Contact"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:background="@drawable/my_button_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Help" />

    <Button
        android:text="Search"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/Search"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/Spinner"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Help"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/Help"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/Clear"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Clear" />

    <TextView
        android:text="Diagnosis of Plant Disease "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        tools:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Select the Disease"
        android:layout_height="42dp"
        android:id="@+id/button15"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="40dp"
        android:ellipsize="none"
        android:clickable="false"
        android:layout_width="200dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Scan to identify the disease"
        android:layout_width="wrap_content"
        android:id="@+id/button_scan"
        android:layout_below="@+id/Search"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_button_bg1"
        android:layout_height="40dp" />

</RelativeLayout>
